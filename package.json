{
  "name": "svg-grid-editor",
  "publisher": "NigelWGMajor",
  "repository": {
    "type": "git",
    "url": "https://github.com/NigelWGMajor/Qed"
  },
  "displayName": "Quick SVG Editor",
  "description": "A grid-based SVG editor for VSCode",
  "version": "0.0.1",
  "engines": {
    "vscode": "^1.85.0"
  },
  "categories": [
    "Other"
  ],
  "activationEvents": [],
  "main": "./out/extension.js",
  "contributes": {
    "customEditors": [
      {
        "viewType": "svgGridEditor.editor",
        "displayName": "Quick SVG Editor",
        "selector": [
          {
            "filenamePattern": "*.svg"
          }
        ],
        "priority": "option"
      }
    ],
    "commands": [
      {
        "command": "svgGridEditor.openEditor",
        "title": "Open SVG in Grid Editor",
        "icon": {
          "light": "./media/editor-icon.svg",
          "dark": "./media/editor-icon.svg"
        }
      },
      {
        "command": "svgGridEditor.loadAsReference",
        "title": "Load SVG as Reference Layer"
      }
    ],
    "menus": {
      "explorer/context": [
        {
          "command": "svgGridEditor.openEditor",
          "when": "resourceExtname == .svg",
          "group": "svgEditor@1"
        },
        {
          "command": "svgGridEditor.loadAsReference",
          "when": "resourceExtname == .svg",
          "group": "svgEditor@2"
        }
      ],
      "editor/title": [
        {
          "command": "svgGridEditor.openEditor",
          "when": "resourceExtname == .svg",
          "group": "navigation",
          "icon": {
            "light": "./media/editor-icon.svg",
            "dark": "./media/editor-icon.svg"
          }
        }
      ]
    }
  },
  "scripts": {
    "vscode:prepublish": "npm run compile",
    "compile": "tsc -p ./",
    "watch": "tsc -watch -p ./",
    "pretest": "npm run compile && npm run lint",
    "lint": "eslint src --ext ts"
  },
  "devDependencies": {
    "@types/node": "^20.x",
    "@types/vscode": "^1.85.0",
    "@typescript-eslint/eslint-plugin": "^6.x",
    "@typescript-eslint/parser": "^6.x",
    "eslint": "^8.x",
    "typescript": "^5.3.0"
  }
}
